{
  "name": "Invoice",
  "type": "object",
  "properties": {
    "invoice_number": {
      "type": "string",
      "description": "Unique invoice number"
    },
    "client_name": {
      "type": "string",
      "description": "Name of the client"
    },
    "submitted_date": {
      "type": "string",
      "format": "date",
      "description": "Date invoice was submitted"
    },
    "date_range_start": {
      "type": "string",
      "format": "date",
      "description": "Start of billing period"
    },
    "date_range_end": {
      "type": "string",
      "format": "date",
      "description": "End of billing period"
    },
    "line_items": {
      "type": "array",
      "description": "Invoice line items",
      "items": {
        "type": "object",
        "properties": {
          "description": {
            "type": "string"
          },
          "hours": {
            "type": "number"
          },
          "minutes": {
            "type": "number"
          },
          "rate": {
            "type": "number"
          },
          "total": {
            "type": "number"
          },
          "link": {
            "type": "string"
          },
          "link_label": {
            "type": "string"
          }
        }
      }
    },
    "adjustments": {
      "type": "array",
      "description": "Adjustments to the invoice",
      "items": {
        "type": "object",
        "properties": {
          "description": {
            "type": "string"
          },
          "amount": {
            "type": "number"
          }
        }
      }
    },
    "subtotal": {
      "type": "number",
      "description": "Subtotal before adjustments"
    },
    "total": {
      "type": "number",
      "description": "Final total"
    },
    "payment_details": {
      "type": "array",
      "description": "Payment method details",
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string"
          },
          "label": {
            "type": "string"
          },
          "value": {
            "type": "string"
          },
          "is_link": {
            "type": "boolean"
          },
          "qr_code_url": {
            "type": "string"
          }
        }
      }
    },
    "status": {
      "type": "string",
      "enum": [
        "draft",
        "pending",
        "paid",
        "overdue",
        "cancelled"
      ],
      "default": "draft",
      "description": "Invoice status"
    },
    "notes": {
      "type": "string",
      "description": "Additional notes"
    }
  },
  "required": [
    "client_name",
    "submitted_date"
  ]
}